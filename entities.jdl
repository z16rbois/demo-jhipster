entity Customer {
firstName String,
lastName String
}
entity Order {
date LocalDate,
billNumber String,
amount Double,
status String,
name String
}

entity OrderLine {
	quantity Integer,
    label String,
    unitPrice Double
}


relationship OneToMany {
Customer to Order{customer(firstName)}
}
relationship OneToMany {
Order to OrderLine
}

filter Customer, Order, OrderLine

paginate Customer, Order, OrderLine with infinite-scroll
